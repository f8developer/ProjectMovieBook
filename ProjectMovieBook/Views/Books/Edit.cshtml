@model ProjectMovieBook.Data.Models.Book.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Editing <b>@Model.Title</b></h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" maxlength="100" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input required name="AuthorName" maxlength="100" value="@ViewData["AuthorName"]" class="form-control" data-val="true" data-val-required="Please enter an Author for the book." />
                @Html.ValidationMessage("AuthorName", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" min="1" max="5" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookGenres" class="control-label"></label>
                <input required name="Genres" placeholder="Enter genres, separated by commas" maxlength="250" value="@ViewData["Genres"]" class="form-control" data-val="true" data-val-required="Please enter at least one genre." />
                @Html.ValidationMessage("Genres", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
